<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp">

    <TextView
        android:id="@+id/pig_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="3"
        android:paddingLeft="5dp"
        android:textAlignment="center"
        android:textSize="18dp"
        tools:text="Subtitle"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp" />

    <ImageView
        android:id="@+id/pig_list_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/pig_id"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_toEndOf="@+id/pig_id"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:src="@drawable/male_sign" />

    <TextView
        android:id="@+id/pig_list_weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:gravity="center_vertical"
        android:textSize="18dp"

        tools:text="Title"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/pig_list_gender"
        android:layout_marginStart="12dp" />

    <ImageButton
        android:id="@+id/pig_list_edit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/pig_list_gender"
        android:layout_marginEnd="15dp"
        android:layout_toStartOf="@+id/imageButton3"
        android:background="#0000"
        android:onClick="showPigDetails"
        android:paddingRight="5dp"
        android:src="@drawable/edit_write_icon" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="19dp"
        android:background="#0000"
        android:onClick="deletePig"
        android:paddingRight="5dp"
        android:src="@drawable/delfatjpg"
        android:layout_alignTop="@+id/pig_list_weight"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
